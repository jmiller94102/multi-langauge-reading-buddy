# Firecrawl
FIRECRAWL_API_KEY=your-firecrawl-api-key-here

# TTS_SERVICE=local/kokoro for local Kokoro TTS or
# LiteLLM TTS Provider: https://docs.litellm.ai/docs/text_to_speech#supported-providers
TTS_SERVICE=azure/gpt-4o-mini-tts-2
# Respective TTS Service API
TTS_SERVICE_API_KEY=your-tts-api-key-here
# OPTIONAL: TTS Provider API Base
TTS_SERVICE_API_BASE=https://your-resource-name.openai.azure.com/

# LiteLLM STT Provider: https://docs.litellm.ai/docs/audio_transcription#supported-providers
STT_SERVICE=azure/whisper
# Respective STT Service API
STT_SERVICE_API_KEY=your-stt-api-key-here
# OPTIONAL: STT Provider API Base
STT_SERVICE_API_BASE=https://your-resource-name.openai.azure.com/

# LangSmith Observability - Standard LangChain Environment Variables
LANGCHAIN_TRACING_V2=true
LANGCHAIN_ENDPOINT=https://api.smith.langchain.com
LANGCHAIN_API_KEY=your-langsmith-api-key-here
LANGCHAIN_PROJECT=default

# AzureOpenAI
AZURE_OPENAI_API_KEY=your-azure-openai-api-key-here
AZURE_OPENAI_API_VERSION="2024-12-01-preview"
AZURE_OPENAI_ENDPOINT="https://your-resource-name.openai.azure.com/"
AZURE_OPENAI_MODEL_NAME="gpt-4"
AZURE_OPENAI_DEPLOYMENT="gpt-4"
AZURE_OPENAI_EMBEDDING_DEPLOYMENT="text-embedding-3-small"
